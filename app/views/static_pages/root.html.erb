<% if current_user %>
<div class="center hero-unit">
  <h1>Welcome to the Social Network!</h1>
    <%= link_to "User profile ", current_user,
                              class: "btn btn-large btn-primary" %>
</div>

<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Social Network!</h1>
      <%= link_to "Sign up ", new_user_registration_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>
