<div>
<ol class "article">
  <span class="label"><%= article.label %></span>
  <span class="body"><%= article.body %></span>
  <span class="timestamp">
    Posted <%= article.created_at %> ago.
  </span>
  <% if article.user == current_user %>
  <%= link_to 'Edit', article %>
  <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?'} %><br/>
  <% end %>
  <h3>Comments </h3>
  <%= render article.comments %>
  <div class="comment">
    <%= render partial: 'comments/form', locals: {article: article} %>
  </div>
</ol>
</div>
